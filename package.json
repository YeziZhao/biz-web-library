{
  "name": "biz-web-library",
  "version": "1.0.4",
  "homepage": "https://yezizhao.github.io/biz-web-library/",
  "scripts": {
    "start": "dumi dev",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "build": "father-build",
    "release": "npm run build && npm publish",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "main": "dist/*.esm.js",
  "module": "dist/*.esm.js",
  "typings": "dist/*.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YeziZhao/biz-web-library.git"
  },
  "dependencies": {
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@umijs/test": "^3.0.5",
    "dumi": "^1.0.10",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.1",
    "yorkie": "^2.0.0"
  }
}
